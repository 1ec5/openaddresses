{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Source",
  "description": "An OpenAddresses source",
  "type": "object",
  "required": [
    "type",
    "data",
    "coverage"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "http",
        "ftp",
        "ESRI"
      ]
    },
    "data": {
      "type": "string"
    },
    "coverage": {
      "$ref": "#/definitions/coverage"
    },
    "website": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "conform": {
      "$ref": "#/definitions/conform"
    },
    "compression": {
      "type": "string",
      "enum": ["zip"]
    },
    "license": {
      "oneOf": [
        { "type": "string" },
        { "$ref": "#/definitions/license" }
      ]
    },
    "note": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ]
    },
    "attribution": {
      "type": "string"
    },
    "language": {
      "type": "string",
      "pattern": "[a-zA-Z]{2}"
    },
    "year": {
      "oneOf": [
        { "type": "string" },
        { "type": "number" }
      ]
    },
    "skip": {
      "type": "boolean"
    }
  },
  "definitions": {
    "coverage": {
      "type": "object",
      "required": [
        "country"
      ],
      "properties": {
        "country": {
          "type": "string"
        }
      }
    },
    "license": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "text": {
          "type": "string"
        },
        "attribution": {
          "type": "boolean"
        },
        "attribution name": {
          "type": "string"
        },
        "share-alike": {
          "type": "boolean"
        }
      }
    },
    "conform": {
      "type": "object",
      "required": ["number", "street"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "geojson",
            "shapefile",
            "shapefile-polygon",
            "gdb",
            "xml",
            "csv"
          ]
        },
        "addrtype": {
          "type": "string"
        },
        "accuracy": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5,
          "exclusiveMinimum": true
        },
        "csvsplit": {
          "type": "string"
        },
        "srs": {
          "type": "string",
          "regex": "EPSG:[0-9]{4}"
        },
        "file": {
          "type": "string"
        },
        "encoding": {
          "type": "string"
        },
        "headers": {
          "type": "integer",
          "minimum": -1
        },
        "skiplines": {
          "type": "integer",
          "minimum": 1
        },
        "notes": {
          "type": "string"
        },
        "id": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "number": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_prefixed_number" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "street": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_postfixed_street" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "unit": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "city": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "district": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "region": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "postcode": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            { "$ref": "#/definitions/function_regexp" },
            { "$ref": "#/definitions/function_remove_prefix" },
            { "$ref": "#/definitions/function_remove_postfix" },
            { "$ref": "#/definitions/function_join" },
            { "$ref": "#/definitions/function_format" }
          ]
        },
        "lon": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            { "type": "object", "$ref": "#/definitions/function_regexp" }
          ]
        },
        "lat": {
          "oneOf": [
            { "type": "null" },
            { "type": "string" },
            { "type": "object", "$ref": "#/definitions/function_regexp" }
          ]
        }
      }
    },
    "function_regexp": {
      "type": "object",
      "required": ["function", "field", "pattern"],
      "properties": {
        "function": {
          "type": "string",
          "enum": ["regexp"]
        },
        "field": {
          "type": "string"
        },
        "pattern": {
          "type": "string",
          "format": "regex"
        },
        "replace": {
          "type": "string"
        }
      }
    },
    "function_prefixed_number": {
      "type": "object",
      "required": ["function", "field"],
      "properties": {
        "function": {
          "type": "string",
          "enum": ["prefixed_number"]
        },
        "field": {
          "type": "string"
        }
      }
    },
    "function_postfixed_street": {
      "type": "object",
      "required": ["function", "field"],
      "properties": {
        "function": {
          "type": "string",
          "enum": ["postfixed_street"]
        },
        "field": {
          "type": "string"
        }
      }
    },
    "function_remove_prefix": {
      "type": "object",
      "required": ["function", "field", "field_to_remove"],
      "properties": {
        "function": {
          "type": "string",
          "enum": ["remove_prefix"]
        },
        "field": {
          "type": "string"
        },
        "field_to_remove": {
          "type": "string"
        }
      }
    },
    "function_remove_postfix": {
      "type": "object",
      "required": ["function", "field", "field_to_remove"],
      "properties": {
        "function": {
          "type": "string",
          "enum": ["remove_postfix"]
        },
        "field": {
          "type": "string"
        },
        "field_to_remove": {
          "type": "string"
        }
      }
    },
    "function_join": {
      "type": "object",
      "required": ["function", "fields"],
      "properties": {
        "function": {
          "type": "string",
          "enum": ["join"]
        },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "separator": {
          "type": "string"
        }
      }
    },
    "function_format": {
      "type": "object",
      "required": ["function", "fields", "format"],
      "properties": {
        "function": {
          "type": "string",
          "enum": ["format"]
        },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "format": {
          "type": "string"
        }
      }
    }
  }
}
